enum AffiliateStatus {
  ACTIVE
  SUSPENDED
  INACTIVE
}

enum AffiliateStatusReason {
  NONE
  DEBT
  MISSING_DOCUMENTATION
  VOLUNTARY_LEAVE
  ADMIN_DECISION
}

model Province {
  id   Int     @id @default(autoincrement())
  name String  @unique
  code String? @unique

  cities     City[]
  affiliates Affiliate[] // 游녣 relaci칩n inversa

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model City {
  id   Int    @id @default(autoincrement())
  name String

  provinceId Int
  province   Province @relation(fields: [provinceId], references: [id])

  affiliates Affiliate[] // 游녣 relaci칩n inversa

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, provinceId])
  @@index([provinceId])
}


model Affiliate {
  id String @id @default(cuid())

  dni             String  @unique
  affiliateNumber String? @unique

  firstName String
  lastName  String
  phone     String?
  email     String?

  organization String?

  provinceId Int
  cityId     Int

  province Province @relation(fields: [provinceId], references: [id])
  city     City     @relation(fields: [cityId], references: [id])

  status       AffiliateStatus       @default(ACTIVE)
  statusReason AffiliateStatusReason @default(NONE)

  activatedAt   DateTime?
  suspendedAt   DateTime?
  inactivatedAt DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  tickets Ticket[]

  @@index([dni])
  @@index([status])
  @@index([organization])
  @@index([provinceId])
  @@index([cityId])
}

model Service {
  id           String  @id @default(cuid())
  name         String
  code         String // si es prefijo tipo "A"
  description  String?
  currentIndex Int     @default(0)
  isActive     Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tickets Ticket[]
}

model Ticket {
  id          String       @id @default(cuid())
  serviceId   String
  affiliateId String?
  number      Int
  code        String       @unique
  status      TicketStatus @default(PENDING)
  createdById String?
  handledById String?
  note        String?

  // Timestamps 칰tiles para dashboard y m칠tricas
  waitingSeconds  Int?
  durationSeconds Int?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  calledAt    DateTime?
  startedAt   DateTime?
  completedAt DateTime?

  service   Service    @relation(fields: [serviceId], references: [id])
  affiliate Affiliate? @relation(fields: [affiliateId], references: [id])
  createdBy User?      @relation("TicketCreatedBy", fields: [createdById], references: [id])
  handledBy User?      @relation("TicketHandledBy", fields: [handledById], references: [id])

  @@unique([serviceId, number])
  @@index([status])
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String // "FUNCTIONAL" | "SECURITY" | "SYSTEM"
  action    String
  metadata  Json?
  actorId   String?
  ip        String? // 칰til para seguridad
  userAgent String? // 칰til para seguridad
  createdAt DateTime @default(now())

  actor User? @relation("UserAuditLogs", fields: [actorId], references: [id])
}
