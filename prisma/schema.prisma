generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TicketStatus {
  PENDING
  WAITING
  CALLED
  IN_PROGRESS
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum Role {
  OPERATOR
  SUPERVISOR
  ADMIN
}

model UserService {
  id String @id @default(cuid())

  userId    String
  serviceId String

  // Control operativo
  isPrimary Boolean @default(false)
  isActive  Boolean @default(true)

  assignedAt   DateTime  @default(now())
  unassignedAt DateTime?

  user    User    @relation(fields: [userId], references: [id])
  service Service @relation(fields: [serviceId], references: [id])

  @@unique([userId, serviceId])
  @@index([userId])
  @@index([serviceId])
}


model UserStatus {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  // Actividad real
  lastActivityAt DateTime? // acciones explicitas del sistema

  // Auditor铆a
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lastActivityAt])
}


model User {
  id      String  @id @default(cuid())
  email   String?
  clerkId String  @unique
  role    Role

  firstName    String?
  lastName     String?
  profileImage String?

  services UserService[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  auditLogs      AuditLog[] @relation("UserAuditLogs")
  ticketsCreated Ticket[]   @relation("TicketCreatedBy")
  ticketsHandled Ticket[]   @relation("TicketHandledBy")

  userStatus UserStatus?
}

enum AffiliateStatus {
  ACTIVE
  SUSPENDED
  INACTIVE
}

enum AffiliateStatusReason {
  NONE
  DEBT
  MISSING_DOCUMENTATION
  VOLUNTARY_LEAVE
  ADMIN_DECISION
}

model Province {
  id   Int     @id @default(autoincrement())
  name String  @unique
  code String? @unique

  cities     City[]
  affiliates Affiliate[] //  relaci贸n inversa

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model City {
  id   Int    @id @default(autoincrement())
  name String

  provinceId Int
  province   Province @relation(fields: [provinceId], references: [id])

  affiliates Affiliate[] //  relaci贸n inversa

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([name, provinceId])
  @@index([provinceId])
}

model Organization {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  affiliates Affiliate[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Affiliate {
  id String @id @default(cuid())

  dni             String  @unique
  affiliateNumber String? @unique

  firstName String
  lastName  String
  phone     String?
  email     String?

  organizationId Int?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  provinceId Int
  cityId     Int

  province Province @relation(fields: [provinceId], references: [id])
  city     City     @relation(fields: [cityId], references: [id])

  status       AffiliateStatus       @default(ACTIVE)
  statusReason AffiliateStatusReason @default(NONE)

  activatedAt   DateTime?
  suspendedAt   DateTime?
  inactivatedAt DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  tickets Ticket[]

  @@index([dni])
  @@index([status])
  @@index([organizationId])
  @@index([provinceId])
  @@index([cityId])
}

model Service {
  id           String  @id @default(cuid())
  name         String
  code         String // si es prefijo tipo "A"
  description  String?
  currentIndex Int     @default(0)
  isActive     Boolean @default(true)

  operators UserService[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tickets Ticket[]
}

model Ticket {
  id          String       @id @default(cuid())
  serviceId   String
  affiliateId String?
  number      Int
  code        String       @unique
  status      TicketStatus @default(PENDING)
  createdById String?
  handledById String?
  note        String?

  // Timestamps 煤tiles para dashboard y m茅tricas
  waitingSeconds  Int?
  durationSeconds Int?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  calledAt    DateTime?
  startedAt   DateTime?
  completedAt DateTime?

  service   Service    @relation(fields: [serviceId], references: [id])
  affiliate Affiliate? @relation(fields: [affiliateId], references: [id])
  createdBy User?      @relation("TicketCreatedBy", fields: [createdById], references: [id])
  handledBy User?      @relation("TicketHandledBy", fields: [handledById], references: [id])

  @@unique([serviceId, number])
  @@index([status])
}

enum AuditEventType {
  FUNCTIONAL
  SECURITY
  SYSTEM
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE

  LOGIN
  LOGOUT

  STATUS_CHANGE
  SEARCH

  ASSIGN
  UNASSIGN

  CALL
  COMPLETE
  CANCEL

  FORBIDDEN_ACCESS
  UNAUTHORIZED_ACCESS
}

enum AuditEntity {
  USER
  TICKET
  AFFILIATE
  SERVICE
  ORGANIZATION
  SYSTEM
}

model AuditLog {
  id String @id @default(cuid())

  // Clasificaci贸n del evento
  eventType AuditEventType
  action    AuditAction
  entity    AuditEntity
  entityId  String?

  // Actor
  actorId   String?
  actorRole Role?

  // Contexto de seguridad
  ip        String?
  userAgent String?

  // Informaci贸n adicional (no cr铆tica para m茅tricas)
  metadata Json?

  // Timestamp
  createdAt DateTime @default(now())

  // Relaciones
  actor User? @relation("UserAuditLogs", fields: [actorId], references: [id])

  // ndices pensados para dashboards
  @@index([createdAt])
  @@index([eventType])
  @@index([action])
  @@index([action, actorId])
  @@index([entity, entityId])
  @@index([actorId])
}
